	<%= render :partial =>"home/breadcrum", :locals => { :current_page => @title} %>
	<h2>Edit Profile</h2>

	<%= profile_error %>

    <%= form_for @user, :url => profile_path, :html => { :class => "form-horizontal" , :multipart => true } do |f| %>  
          <%=  set_profile %>
        <div class="control-group" >
		    <label class="control-label">Password</label>
		    <div class="controls">
		    	<%= text_field_tag "user[password]", "", :placeholder => "Password", :type => "password"  %>
		    </div>
	    </div>
	    <div class="control-group" >
		    <label class="control-label">Re-Password</label>
		    <div class="controls">
		    	<%= f.text_field :password_confirmation, :placeholder => "Re-Password", :type => "password"  %>
		    </div>
	    </div>
	    <div class="control-group" >
		    <label class="control-label">Avatar</label>
		    <div class="controls">
		    	<%= image_tag show_avatar(@user[:avatar]),:onerror => "this.src='/data/no-image.jpg'", :class => "img-polaroid", :width => "215" %><br/>
		    	<%= f.file_field :avatar %>
		    </div>
	    </div>
	    <div class="control-group">
		    <div class="controls">
		    <button type="submit" class="btn">Save</button>
		    </div>
	    </div>
    <% end %>
    <script type="text/javascript">
    	$(document).ready(function() {
    		$(".alert").alert();
		});
    </script>